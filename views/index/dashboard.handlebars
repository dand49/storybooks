<h1>Welcome {{user.firstName}}</h1>
<h4>Your Stories</h4>
{{#if stories}}
  <table class="striped">
    <thead>
      <tr>
        <th><a href="/dashboard/title">Title</a></th>
        <th><a href="/dashboard/date">Date</a></th>
        <th><a href="/dashboard/status">Status</a></th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      {{#each stories}}
        <tr>
          <td><a href="/stories/show/{{id}}">{{title}}
          {{#if author}}
            <small>&nbsp;&nbsp;(By: {{author}})</small>
          {{/if}}
          </a></td>
          <td>{{formatDate date 'MMMM Do YYYY'}}</td>
          <td><span class="dash-status">{{status}}</span></td>
          <td>
            <a class="btn left-align" href="/stories/edit/{{id}}"><i class="fa fa-pencil"></i>Edit</a>

            <form action="/stories/{{id}}?_method=DELETE" method="post" id="delete-form">
            <!-- <input type="hidden" name="_method" value="DELETE"> -->
              <button type="submit" class="btn red"><i class="fa fa-remove"></i>Delete</button>
            </form>
          </td>
        </tr>
      {{/each}}
    </tbody>
  </table>
{{else}}
  <p>You have not created any stories yet</p>
{{/if}}